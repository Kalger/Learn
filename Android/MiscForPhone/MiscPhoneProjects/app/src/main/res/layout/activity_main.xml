<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="permission"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/basic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="basic activity"
        app:layout_constraintTop_toBottomOf="@id/permission"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/nav_drawer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigation drawer activity"
        app:layout_constraintTop_toBottomOf="@id/basic_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/constraint_flow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="constraintLayout flow"
        app:layout_constraintTop_toBottomOf="@id/nav_drawer_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/misc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misc activity"
        app:layout_constraintTop_toBottomOf="@id/constraint_flow_button"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>