<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constranitlayout.FlowActivity">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:constraint_referenced_ids="item_1, item_2, item_3,
         item_4, item_5, item_6, item_7, item_8, item_9"
        app:flow_wrapMode="chain"
        app:flow_firstHorizontalStyle="packed"
        app:flow_lastHorizontalStyle="spread_inside"
        app:flow_horizontalStyle="packed"
        app:flow_maxElementsWrap="3"
        app:flow_firstHorizontalBias="0"
        app:flow_horizontalBias="1" />


    <View
        android:id="@+id/item_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ff0000"/>

    <View
        android:id="@+id/item_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#cc0000" />

    <View
        android:id="@+id/item_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ffcc00"/>

    <View
        android:id="@+id/item_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ffff00"/>

    <View
        android:id="@+id/item_5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ff00aa"/>

    <View
        android:id="@+id/item_6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ff00ff"/>

    <View
        android:id="@+id/item_7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00ff00"/>

    <View
        android:id="@+id/item_8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00aa00" />

    <View
        android:id="@+id/item_9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#0000ff"/>


    <!--    -->
    <androidx.constraintlayout.helper.widget.Flow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:constraint_referenced_ids="item_10, item_11, item_12,
    item_13, item_14, item_15"
    app:flow_wrapMode="none"
    app:flow_horizontalStyle="packed"
    android:orientation="vertical"/>

    <View
        android:id="@+id/item_10"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ff0000"/>

    <View
        android:id="@+id/item_11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#cc0000" />

    <View
        android:id="@+id/item_12"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ffcc00"/>

    <View
        android:id="@+id/item_13"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ffff00"/>

    <View
        android:id="@+id/item_14"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00aa00" />

    <View
        android:id="@+id/item_15"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#0000ff"/>


</androidx.constraintlayout.widget.ConstraintLayout>