<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constranitlayout.FlowActivity">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="item_1, item_2, item_3,
         item_4, item_5, item_6, item_7, item_8, item_9"
        app:flow_horizontalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_horizontalBias="1"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"/>

    <View
        android:id="@+id/item_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ff0000"/>

    <View
        android:id="@+id/item_2"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="#cc0000" />

    <View
        android:id="@+id/item_3"
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:background="#ffcc00"/>

    <View
        android:id="@+id/item_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ffff00"/>

    <View
        android:id="@+id/item_5"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:background="#ff00aa"/>

    <View
        android:id="@+id/item_6"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:background="#ff00ff"/>

    <View
        android:id="@+id/item_7"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:background="#00ff00"/>

    <View
        android:id="@+id/item_8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00aa00"/>

    <View
        android:id="@+id/item_9"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="#0000ff"/>

</androidx.constraintlayout.widget.ConstraintLayout>